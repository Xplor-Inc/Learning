@model List<ExpenceManagement.Models.Expenses>

   
@{
    ViewBag.Title = "Expenses List";
}
<style>
    .first{
        background-color:palevioletred;
        color:black;
        border:4px solid green;
    }

    h2{
        text-align:center;
        background-color:red;
        color:black;
        border:2px solid red 20px;
        
    }
</style>
<div class="first">

    <h2>Expenses List</h2>
    <div class="row">
        <div class="col-3" style="padding:22px">
            @Html.ActionLink("Add Expenses" ,"Create")
        </div>
        <div class="col-3" style="padding:10px">
            <form method="get">
                <div class="input-group">
                    <input class="form-control" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table border="1" class="table">
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Details</th>
            <th>Remarks</th>
            <th>Amount</th>
            <th>CategoryName</th>
            <th>BankName</th>
            <th>Action Item</th>

        </tr>

        @foreach (var item in Model)
        {
            @using (Html.BeginForm("Delete", "Expenses", new { id = item.Id }, FormMethod.Post))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Date</td>
                    <td>@item.Details</td>
                    <td>@item.Remarks</td>
                    <td>@item.Amount</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.Account?.BankName</td>
                    <td>
                        @Html.ActionLink("Edit","Edit", new {id=item.Id})
                        @Html.ActionLink("Details","Details",new {id=item.Id})
                    </td>
                </tr>
            }
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td style="text-align:right">
                Total Amount :
            </td>
            <td>
                @Model.Sum(e=>e.Amount)
            </td>
        </tr>
    </table>
</div>





